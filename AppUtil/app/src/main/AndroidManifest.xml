<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.apputil">

    <uses-permission android:name="android.permission.INTERNET" />
    <!--获取网络当前状态的网络类型-->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!--获取位置权限-->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".myapplication.CustomApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".appsplash.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".appsplash.guide.GuideActivity" />
        <activity android:name=".appsplash.login.LoginActivity" />
        <activity android:name=".MainActivity" />
        <activity android:name=".picture.AlbumActivity" />
        <activity android:name=".refresh.ListViewActivity" />
        <activity android:name=".refresh.SwipeListViewActivity" />
        <activity android:name=".swipelayout.ActivitySlideDelete" />
        <activity android:name=".customview.viewpager.ActivityOrientVp" />
        <activity android:name=".customview.viewpager.ActivityCardViewPager" />
        <activity android:name=".activity.FlowLayoutActivity" />
        <activity android:name=".activity.BadGeViewActivity" />
        <activity android:name=".expandlistview.ExpandableListViewActivity" />
        <activity android:name=".activity.KeyBoardActivity"/>
        <activity android:name=".bottomtab.BottomTabActivity"/>
    </application>

</manifest>
