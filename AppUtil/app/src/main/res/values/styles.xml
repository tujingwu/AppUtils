<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--appbar样式-->
    <style name="AppBarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@color/colorAppBar</item>
    </style>


    <!--dialog样式-->
    <style name="dialogStyle" parent="@android:style/Theme.Dialog">

        <item name="android:windowFrame">@null</item>
        <!--边框-->
        <item name="android:windowIsFloating">true</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item>
        <!--半透明-->
        <item name="android:windowNoTitle">true</item>
        <!--无标题-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--背景透明-->
        <item name="android:backgroundDimEnabled">true</item>
        <!--模糊-->

    </style>

    <!--dialog动画 1-->
    <style name="DialogAnim1">
        <!-- 指定显示的动画xml -->
        <item name="android:windowEnterAnimation">@anim/show_button_dialog</item>
        <!-- 指定消失的动画xml -->
        <item name="android:windowExitAnimation">@anim/hidden_button_dialog</item>
    </style>

    <!--dialog动画 2-->
    <style name="DialogAnim2">
        <!-- 指定显示的动画xml -->
        <item name="android:windowEnterAnimation">@anim/dialog_enter_anim</item>
        <!-- 指定消失的动画xml -->
        <item name="android:windowExitAnimation">@anim/dialog_exit_anim</item>
    </style>

    <!--沉浸式样式-->
    <style name="BarTintStyle">
        <!-- 沉浸式状态栏 -->
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <!--底部栏样式-->
    <style name="BottomTabStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">13sp</item>
    </style>
</resources>
