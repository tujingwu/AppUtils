<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/dialog_style"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="选择图像" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#18000000" />

        <TextView
            android:id="@+id/person_center_tv_camera"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="拍照"
            android:textColor="#467ed7"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#18000000" />

        <TextView
            android:id="@+id/person_center_tv_photo"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="从相册选择"
            android:textColor="#467ed7"
            android:textSize="20sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/person_center_tv_head_cancel"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/dialog_style"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="取消"
        android:textColor="#467ed7"
        android:textSize="20sp" />

</LinearLayout>
